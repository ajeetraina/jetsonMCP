# JetsonMCP Configuration
# Copy this file to .env and customize for your setup

# ==============================================
# JETSON CONNECTION SETTINGS (Required)
# ==============================================

# Jetson Nano IP address or hostname
JETSON_HOST=192.168.1.100

# SSH credentials (choose one method)
JETSON_USERNAME=your_username
JETSON_PASSWORD=your_password

# Alternative: SSH key authentication (recommended for production)
# JETSON_SSH_KEY_PATH=~/.ssh/id_rsa
# JETSON_SSH_PASSPHRASE=your_key_passphrase

# SSH connection settings
JETSON_SSH_PORT=22
JETSON_SSH_TIMEOUT=30
JETSON_SSH_RETRIES=3

# ==============================================
# POWER MANAGEMENT SETTINGS
# ==============================================

# Default power mode (0=MAXN/15W, 1=5W, 2=10W)
JETSON_POWER_MODE=0

# Temperature thresholds (Celsius)
JETSON_TEMP_WARNING=70
JETSON_TEMP_CRITICAL=80

# Fan control settings
JETSON_FAN_AUTO=true
JETSON_FAN_MIN_SPEED=50
JETSON_FAN_MAX_SPEED=100

# ==============================================
# CUDA & GPU SETTINGS
# ==============================================

# CUDA visible devices (default: 0 for single GPU)
CUDA_VISIBLE_DEVICES=0

# GPU memory fraction for TensorFlow/PyTorch
GPU_MEMORY_FRACTION=0.8

# TensorRT optimization settings
TENSORRT_ENABLED=true
TENSORRT_PRECISION=FP16

# ==============================================
# DOCKER & CONTAINER SETTINGS
# ==============================================

# Docker daemon settings
DOCKER_ENABLED=true
DOCKER_BUILDX_ENABLED=true

# Container registry settings
DOCKER_REGISTRY=localhost:5000
DOCKER_REGISTRY_ENABLED=false

# NVIDIA Container Runtime
NVIDIA_RUNTIME_ENABLED=true

# ==============================================
# AI FRAMEWORK SETTINGS
# ==============================================

# TensorFlow settings
TENSORFLOW_ENABLED=true
TENSORFLOW_VERSION=2.13.0

# PyTorch settings
PYTORCH_ENABLED=true
PYTORCH_VERSION=2.0.1

# OpenCV settings
OPENCV_ENABLED=true
OPENCV_VERSION=4.8.0

# ==============================================
# KUBERNETES & ORCHESTRATION
# ==============================================

# K3s lightweight Kubernetes
K3S_ENABLED=false
K3S_TOKEN=your_k3s_token
K3S_SERVER_URL=https://server-url:6443

# Helm package manager
HELM_ENABLED=false

# ==============================================
# MONITORING & LOGGING
# ==============================================

# System monitoring settings
MONITORING_ENABLED=true
MONITORING_INTERVAL=30
METRICS_RETENTION_DAYS=7

# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=/var/log/jetsonmcp.log

# Remote monitoring endpoints
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=false
GRAFANA_PORT=3000

# ==============================================
# SECURITY SETTINGS
# ==============================================

# SSH security
SSH_STRICT_HOST_CHECKING=true
SSH_HOST_KEY_ALGORITHMS=rsa,ecdsa,ed25519

# Firewall settings
FIREWALL_ENABLED=true
ALLOWED_PORTS=22,80,443,8080

# System hardening
AUTOMATIC_UPDATES=true
SECURITY_PATCHES_ONLY=true

# ==============================================
# DEVELOPMENT & TESTING
# ==============================================

# Development mode settings
DEBUG_MODE=false
DEVELOPMENT_MODE=false

# Test environment settings
TEST_MODE=false
MOCK_SSH_CONNECTIONS=false

# Performance testing
BENCHMARK_MODE=false
PROFILING_ENABLED=false

# ==============================================
# JETPACK & NVIDIA SETTINGS
# ==============================================

# JetPack version management
JETPACK_VERSION=4.6.1
JETPACK_AUTO_UPDATE=false

# NVIDIA driver settings
NVIDIA_DRIVER_VERSION=35.4.1
CUDA_VERSION=11.4

# L4T (Linux for Tegra) settings
L4T_VERSION=32.7.1

# ==============================================
# STORAGE & BACKUP SETTINGS
# ==============================================

# Storage management
SWAP_ENABLED=true
SWAP_SIZE=4G
ZRAM_ENABLED=true

# Backup settings
BACKUP_ENABLED=true
BACKUP_LOCATION=/home/backup/jetsonmcp
BACKUP_RETENTION_DAYS=30

# NVMe SSD optimization
NVME_ENABLED=false
NVME_MOUNT_POINT=/mnt/nvme

# ==============================================
# NETWORK SETTINGS
# ==============================================

# Network interface settings
NETWORK_INTERFACE=eth0
STATIC_IP_ENABLED=false
STATIC_IP=192.168.1.100
GATEWAY_IP=192.168.1.1
DNS_SERVERS=8.8.8.8,8.8.4.4

# WiFi settings (if applicable)
WIFI_ENABLED=false
WIFI_SSID=your_wifi_network
WIFI_PASSWORD=your_wifi_password

# ==============================================
# MODEL DEPLOYMENT SETTINGS
# ==============================================

# Model serving settings
MODEL_SERVING_ENABLED=false
MODEL_SERVING_PORT=8501
MODEL_SERVING_WORKERS=2

# Model optimization
MODEL_OPTIMIZATION_ENABLED=true
QUANTIZATION_ENABLED=true
PRUNING_ENABLED=false

# Model registry
MODEL_REGISTRY_ENABLED=false
MODEL_REGISTRY_URL=http://localhost:5001

# ==============================================
# ADVANCED SETTINGS
# ==============================================

# Performance tuning
CPU_GOVERNOR=performance
GPU_GOVERNOR=performance
MEMORY_OVERCOMMIT=1

# System tweaks
DISABLE_GUI=false
REDUCE_MEMORY_USAGE=true
OPTIMIZE_FOR_INFERENCE=true

# Experimental features
EXPERIMENTAL_FEATURES=false
BETA_OPTIMIZATIONS=false